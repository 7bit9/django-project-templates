<VirtualHost *:80>
    WSGIScriptAlias /$(project) /home/projects/sites/django-projects/$(project)/repository/$(project)/configs/staging/staging.wsgi
    
    #Redirect permanent /favicon.ico http://media.$(staging_domain)/$(project)/na_media/favicon.ico
    
    Alias /robots.txt /home/projects/sites/django-projects/$(project)/repository/$(project)/assets/robots.txt
 
    ErrorLog /home/projects/logs/$(project).error.log
    LogLevel warn

    CustomLog /home/projects/logs/$(project).access.log combined
    
    ServerSignature Off
    
    RewriteEngine on
    # canonical hostname
    RewriteCond %{HTTP_HOST} ^www [NC] 
    RewriteRule ^/(.*)  http://$(staging_domain)/$(project)$1 [L,R]
    
    RewriteCond %{REQUEST_URI} /maintenance.html$ 
    RewriteRule $ / [R=302,L]
</VirtualHost>